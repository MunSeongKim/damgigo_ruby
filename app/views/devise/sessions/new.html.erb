<style>
/* Bordered form */
form {
    border: 3px solid #f1f1f1;
}

/* Full-width inputs */
input[type=email], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    color: black;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
}

#user_remember_me {
  margin-right: 5px;
}
</style>

<div class="w3-display-middle w3-text-theme">    
    <h2 class="w3-xxlarge w3-hide-large w3-hide-medium" style="text-shadow:1px 1px 0 #006e51">Sign in</h2>
    <h2 class="w3-jumbo w3-hide-small" style="text-shadow:1px 1px 0 #006e51">Sign in</h2>
    <div class="w3-card-4">
        
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="w3-container w3-margin w3-jumbo w3-hide-small w3-center"><i class="fa fa-user"></i></div>
        <div class="w3-container form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "Enter E-mail account"%>
            <%= f.input :password, required: false, placeholder: "Enter password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="w3-container w3-center w3-padding form-actions">
          <%= f.button :submit, "로그인", class: "w3-block w3-button w3-theme" %>
        </div>
      <% end %>
      <div class="w3-container w3-center w3-padding-large">
        <%= render "devise/shared/links" %>  
      </div>
    </div>
</div>

<% if flash[:alert] %>
    <%= javascript_tag "alert(' #{flash[:alert]} ')" %>
<% end %>
